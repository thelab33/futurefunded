  text-shadow:0 0 calc(var(--holo-stroke)*3) rgba(0,0,0,.78), 0 1px calc(var(--holo-stroke)*2) rgba(0,0,0,.45), 0 0 28px rgba(255,255,255,var(--holo-glow));
  transform:translateZ(var(--holo-depth)); will-change:transform, filter;
}
