/* ==========================================================================
   FutureFunded • Flagship v16.3 • Graphite Aurora (Elite CSS)
   Single-file, token-driven, accessibility-forward, mobile-first.
   Matches index.html hooks/IDs:
   - body.ff-body.ff-body--flagship[data-ff-body]
   - #ffShell.ff-shell[data-ff-shell]
   - #mobileDrawer.ff-drawer[data-ff-drawer]
   - .ff-modal#ffShareModal/#ffPolicyModal/#ffProofModal
   ========================================================================== */

/* -----------------------------
   0) Reset + sane defaults
----------------------------- */
*,
*::before,
*::after { box-sizing: border-box; }

html { -webkit-text-size-adjust: 100%; text-size-adjust: 100%; }
body { margin: 0; }

img, svg, video, canvas { max-width: 100%; height: auto; }

button, input, textarea, select {
  font: inherit;
  color: inherit;
}

a { color: inherit; text-decoration: none; }

:where(ul, ol) { margin: 0; padding: 0; list-style: none; }
:where(p, h1, h2, h3, h4, h5, h6) { margin: 0; }
:where(details > summary) { cursor: pointer; }
:where([hidden]) { display: none !important; }

/* -----------------------------
   1) Tokens (Theme + scale)
----------------------------- */
:root {
  /* Typography */
  --ff-font-sans: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
  --ff-font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;

  /* Radii */
  --ff-r-xs: 10px;
  --ff-r-sm: 14px;
  --ff-r-md: 18px;
  --ff-r-lg: 22px;
  --ff-r-xl: 28px;

  /* Spacing scale */
  --ff-1: 4px;
  --ff-2: 8px;
  --ff-3: 12px;
  --ff-4: 16px;
  --ff-5: 20px;
  --ff-6: 24px;
  --ff-7: 28px;
  --ff-8: 32px;
  --ff-9: 40px;
  --ff-10: 48px;

  /* Shadows */
  --ff-shadow-1: 0 1px 0 rgba(255,255,255,.06), 0 10px 30px rgba(0,0,0,.22);
  --ff-shadow-2: 0 1px 0 rgba(255,255,255,.08), 0 18px 60px rgba(0,0,0,.35);
  --ff-shadow-inset: inset 0 1px 0 rgba(255,255,255,.06);

  /* Motion */
  --ff-ease: cubic-bezier(.2,.8,.2,1);
  --ff-fast: 140ms;
  --ff-med: 220ms;
  --ff-slow: 460ms;

  /* Container */
  --ff-container: 1120px;
  --ff-gutter: 18px;

  /* Safe area */
  --ff-safe-top: env(safe-area-inset-top, 0px);
  --ff-safe-right: env(safe-area-inset-right, 0px);
  --ff-safe-bottom: env(safe-area-inset-bottom, 0px);
  --ff-safe-left: env(safe-area-inset-left, 0px);

  /* Default (dark) theme */
  --ff-bg: #070b12;
  --ff-bg2: #0b0f17;
  --ff-surface: rgba(18, 24, 38, .82);
  --ff-surface2: rgba(15, 20, 32, .68);
  --ff-glass: rgba(255,255,255,.06);

  --ff-text: rgba(255,255,255,.92);
  --ff-muted: rgba(255,255,255,.66);
  --ff-faint: rgba(255,255,255,.48);
  --ff-border: rgba(255,255,255,.12);
  --ff-border2: rgba(255,255,255,.16);

  --ff-accent: #f97316;
  --ff-accent2: #22d3ee;
  --ff-good: #34d399;
  --ff-warn: #fbbf24;
  --ff-bad:  #fb7185;

  --ff-ring: rgba(249,115,22,.45);
  --ff-ring2: rgba(34,211,238,.36);

  --ff-link: rgba(255,255,255,.92);
  --ff-link-hover: #ffffff;

  --ff-chip-bg: rgba(255,255,255,.06);
  --ff-chip-bg2: rgba(255,255,255,.09);
  --ff-chip-border: rgba(255,255,255,.12);

  --ff-input-bg: rgba(255,255,255,.05);
  --ff-input-border: rgba(255,255,255,.14);

  --ff-grad-a: radial-gradient(900px 400px at 14% 12%, rgba(34,211,238,.22), transparent 60%);
  --ff-grad-b: radial-gradient(820px 520px at 84% 18%, rgba(249,115,22,.22), transparent 55%);
  --ff-grad-c: radial-gradient(900px 700px at 50% 120%, rgba(99,102,241,.12), transparent 58%);
}

/* Light theme toggle via attribute */
html[data-theme="light"] {
  --ff-bg: #f6f7fb;
  --ff-bg2: #ffffff;
  --ff-surface: rgba(255,255,255,.86);
  --ff-surface2: rgba(255,255,255,.72);
  --ff-glass: rgba(0,0,0,.04);

  --ff-text: rgba(13, 18, 30, .92);
  --ff-muted: rgba(13, 18, 30, .66);
  --ff-faint: rgba(13, 18, 30, .48);
  --ff-border: rgba(13, 18, 30, .12);
  --ff-border2: rgba(13, 18, 30, .16);

  --ff-ring: rgba(249,115,22,.36);
  --ff-ring2: rgba(34,211,238,.30);

  --ff-chip-bg: rgba(13,18,30,.05);
  --ff-chip-bg2: rgba(13,18,30,.08);
  --ff-chip-border: rgba(13,18,30,.12);

  --ff-input-bg: rgba(13,18,30,.04);
  --ff-input-border: rgba(13,18,30,.16);

  --ff-grad-a: radial-gradient(900px 400px at 14% 12%, rgba(34,211,238,.14), transparent 60%);
  --ff-grad-b: radial-gradient(820px 520px at 84% 18%, rgba(249,115,22,.14), transparent 55%);
  --ff-grad-c: radial-gradient(900px 700px at 50% 120%, rgba(99,102,241,.10), transparent 58%);
}

/* -----------------------------
   2) Base page + background shell
   (aligned to: <body class="ff-body ff-body--flagship" data-ff-body="v16.x">)
----------------------------- */
.ff-body,
body.ff-body,
body.ff-body--flagship {
  font-family: var(--ff-font-sans);
  background: var(--ff-bg);
  color: var(--ff-text);
  min-height: 100dvh;
  line-height: 1.45;
  overflow-x: hidden;
}

.ff-safe {
  padding-left: var(--ff-safe-left);
  padding-right: var(--ff-safe-right);
}

.ff-shellBg {
  position: fixed;
  inset: 0;
  z-index: -2;
  background: var(--ff-bg);
}
.ff-shellBg::before {
  content: "";
  position: absolute;
  inset: 0;
  background: var(--ff-grad-a), var(--ff-grad-b), var(--ff-grad-c);
  filter: saturate(1.05);
  opacity: .95;
}
.ff-shellBg::after {
  content: "";
  position: absolute;
  inset: -2px;
  background: radial-gradient(1px 1px at 30px 30px, rgba(255,255,255,.10) 1px, transparent 0) 0 0/44px 44px;
  opacity: .12;
  pointer-events: none;
}

/* Skip links */
.ff-skiplinks {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
}
.ff-skip {
  position: absolute;
  transform: translateY(-130%);
  margin: var(--ff-4);
  padding: 10px 12px;
  background: var(--ff-bg2);
  border: 1px solid var(--ff-border);
  border-radius: 12px;
  box-shadow: var(--ff-shadow-1);
  color: var(--ff-text);
}
.ff-skip:focus {
  transform: translateY(0);
  outline: none;
  box-shadow: 0 0 0 4px var(--ff-ring), var(--ff-shadow-1);
}

/* Screen reader only */
.ff-sr {
  position: absolute !important;
  width: 1px; height: 1px;
  padding: 0; margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  white-space: nowrap;
  border: 0;
}

/* Containers */
.ff-container {
  width: min(var(--ff-container), 100%);
  margin-inline: auto;
  padding-inline: calc(var(--ff-gutter) + var(--ff-safe-left)) calc(var(--ff-gutter) + var(--ff-safe-right));
}

/* Main shell */
#ffShell.ff-shell {
  position: relative;
  isolation: isolate;
  padding-bottom: calc(88px + var(--ff-safe-bottom)); /* space for tabs */
}

/* -----------------------------
   3) Typography system
----------------------------- */
.ff-kicker {
  font-size: 12px;
  letter-spacing: .14em;
  text-transform: uppercase;
  color: var(--ff-faint);
}

.ff-label {
  font-size: 13px;
  font-weight: 650;
  letter-spacing: .01em;
  color: var(--ff-text);
}

.ff-help {
  font-size: 13px;
  color: var(--ff-muted);
}

.ff-muted { color: var(--ff-muted); }
.ff-m-0 { margin: 0 !important; }
.ff-mb-0 { margin-bottom: 0 !important; }

.ff-num {
  font-variant-numeric: tabular-nums lining-nums;
  letter-spacing: .01em;
}

.ff-display {
  font-size: clamp(32px, 4.2vw, 54px);
  line-height: 1.03;
  letter-spacing: -.02em;
  font-weight: 760;
}

.ff-h2 {
  font-size: clamp(20px, 2.1vw, 28px);
  line-height: 1.15;
  letter-spacing: -.01em;
  font-weight: 740;
}

.ff-lead {
  font-size: 15px;
  line-height: 1.55;
  color: var(--ff-muted);
  max-width: 72ch;
}

.ff-accent { color: var(--ff-accent); }
.ff-big { font-size: 30px; font-weight: 780; line-height: 1.05; }
.ff-maxw-62 { max-width: 62ch; }
.ff-maxw-68 { max-width: 68ch; }

/* -----------------------------
   4) Utility layout helpers
----------------------------- */
.ff-row { display: flex; gap: var(--ff-3); }
.ff-wrap { flex-wrap: wrap; }
.ff-grow { flex: 1; }
.ff-minw-0 { min-width: 0; }
.ff-ais { align-items: stretch; }
.ff-row--between { justify-content: space-between; }
.ff-w-100 { width: 100%; }
.ff-justify-start { justify-content: flex-start; }

.ff-stack { display: grid; gap: var(--ff-3); }
.ff-grid { display: grid; gap: var(--ff-4); }
.ff-grid--2 { grid-template-columns: repeat(2, minmax(0,1fr)); }
.ff-grid--3 { grid-template-columns: repeat(3, minmax(0,1fr)); }
.ff-grid--cards { grid-template-columns: repeat(3, minmax(0,1fr)); }

@media (max-width: 980px) {
  .ff-grid--3, .ff-grid--cards { grid-template-columns: repeat(2, minmax(0,1fr)); }
}
@media (max-width: 640px) {
  .ff-grid--2, .ff-grid--3, .ff-grid--cards { grid-template-columns: 1fr; }
}

/* Spacing utilities used in markup */
.ff-mt-1 { margin-top: var(--ff-2) !important; }
.ff-mt-2 { margin-top: var(--ff-4) !important; }
.ff-mt-3 { margin-top: var(--ff-6) !important; }
.ff-mt-4 { margin-top: var(--ff-8) !important; }
.ff-my-2 { margin-block: var(--ff-4) !important; }
.ff-my-3 { margin-block: var(--ff-6) !important; }
.ff-pad { padding: var(--ff-6); }

@media (max-width: 640px) { .ff-pad { padding: var(--ff-5); } }

/* Divider */
.ff-divider,
.ff-footer__rule {
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--ff-border), transparent);
  opacity: .95;
}

/* -----------------------------
   5) Surfaces + cards (premium glass)
----------------------------- */
.ff-surface {
  background: var(--ff-surface);
  border: 1px solid var(--ff-border);
  box-shadow: var(--ff-shadow-1);
  border-radius: var(--ff-r-xl);
}

.ff-glass {
  background: linear-gradient(180deg, rgba(255,255,255,.07), rgba(255,255,255,.04));
  border: 1px solid var(--ff-border);
  box-shadow: var(--ff-shadow-inset);
  -webkit-backdrop-filter: blur(12px);
  backdrop-filter: blur(12px);
}

.ff-card {
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: var(--ff-surface);
  box-shadow: var(--ff-shadow-1);
}

.ff-card--premium { background: var(--ff-surface2); }
.ff-card--lift { box-shadow: var(--ff-shadow-2); }

.ff-mini {
  border-radius: var(--ff-r-lg);
  border: 1px solid var(--ff-border);
  background: var(--ff-surface2);
  padding: var(--ff-5);
  box-shadow: var(--ff-shadow-inset);
}
.ff-mini--premium { background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.04)); }

.ff-panel {
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: var(--ff-surface2);
  padding: var(--ff-6);
}
.ff-panel--premium { background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.04)); }

/* -----------------------------
   6) Buttons, pills, chips, icon buttons
----------------------------- */
.ff-btn {
  --_bg: transparent;
  --_fg: var(--ff-text);
  --_bd: var(--ff-border);
  --_sh: none;

  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;

  height: 42px;
  padding: 0 14px;
  border-radius: 16px;
  border: 1px solid var(--_bd);
  background: var(--_bg);
  color: var(--_fg);
  box-shadow: var(--_sh);
  cursor: pointer;
  user-select: none;
  transition:
    transform var(--ff-fast) var(--ff-ease),
    background var(--ff-fast) var(--ff-ease),
    border-color var(--ff-fast) var(--ff-ease),
    box-shadow var(--ff-fast) var(--ff-ease),
    opacity var(--ff-fast) var(--ff-ease);
}

.ff-btn:hover { transform: translateY(-1px); }
.ff-btn:active { transform: translateY(0); }

.ff-btn:focus-visible {
  outline: none;
  box-shadow: 0 0 0 4px var(--ff-ring), var(--ff-shadow-1);
  border-color: rgba(249,115,22,.55);
}

.ff-btn[disabled],
.ff-btn:disabled {
  opacity: .55;
  cursor: not-allowed;
  transform: none;
}

.ff-btn--sm { height: 36px; padding: 0 12px; border-radius: 14px; font-size: 13px; }
.ff-btn--lg { height: 50px; padding: 0 18px; border-radius: 18px; font-weight: 700; }

/* Primary (supports both class names used across codebases) */
:is(.ff-btn--primary, .ff-btn-primary) {
  --_bg: linear-gradient(180deg, rgba(249,115,22,.95), rgba(249,115,22,.78));
  --_bd: rgba(249,115,22,.55);
  --_sh: 0 12px 28px rgba(249,115,22,.18);
  --_fg: #0b0f17;
}
html[data-theme="light"] :is(.ff-btn--primary, .ff-btn-primary) { --_fg: #0b0f17; }

.ff-btn--secondary {
  --_bg: rgba(34,211,238,.10);
  --_bd: rgba(34,211,238,.28);
  --_fg: var(--ff-text);
  --_sh: 0 10px 26px rgba(34,211,238,.10);
}

.ff-btn--ghost {
  --_bg: transparent;
  --_bd: var(--ff-border);
  --_fg: var(--ff-text);
}
.ff-btn--ghost:hover { background: rgba(255,255,255,.06); }
html[data-theme="light"] .ff-btn--ghost:hover { background: rgba(13,18,30,.06); }

.ff-iconbtn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 42px;
  height: 42px;
  border-radius: 16px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  cursor: pointer;
  transition:
    transform var(--ff-fast) var(--ff-ease),
    background var(--ff-fast) var(--ff-ease),
    border-color var(--ff-fast) var(--ff-ease),
    box-shadow var(--ff-fast) var(--ff-ease);
}
.ff-iconbtn:hover { background: rgba(255,255,255,.07); transform: translateY(-1px); }
.ff-iconbtn:active { transform: translateY(0); }
.ff-iconbtn:focus-visible { outline: none; box-shadow: 0 0 0 4px var(--ff-ring); }

.ff-icon { display: inline-flex; align-items: center; justify-content: center; }

/* Pills */
.ff-pill {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 7px 10px;
  border-radius: 999px;
  border: 1px solid var(--ff-chip-border);
  background: var(--ff-chip-bg);
  color: var(--ff-muted);
  font-size: 12px;
  line-height: 1;
  box-shadow: var(--ff-shadow-inset);
}
.ff-pill--sm { padding: 6px 9px; font-size: 11px; }
.ff-pill--ghost { background: transparent; }
.ff-pill--accent {
  background: rgba(249,115,22,.12);
  border-color: rgba(249,115,22,.30);
  color: rgba(255,255,255,.88);
}
html[data-theme="light"] .ff-pill--accent { color: rgba(13,18,30,.86); }

.ff-pill--verified {
  background: rgba(52,211,153,.10);
  border-color: rgba(52,211,153,.26);
  color: rgba(255,255,255,.88);
}
html[data-theme="light"] .ff-pill--verified { color: rgba(13,18,30,.86); }

.ff-pill--live {
  background: rgba(34,211,238,.10);
  border-color: rgba(34,211,238,.30);
  color: rgba(255,255,255,.88);
}

.ff-dot {
  width: 8px; height: 8px;
  border-radius: 999px;
  background: var(--ff-accent2);
  box-shadow: 0 0 0 4px rgba(34,211,238,.12);
}

/* Chips */
.ff-chipgrid { display: grid; gap: var(--ff-3); grid-template-columns: repeat(4, minmax(0,1fr)); }
.ff-chipgrid__span2 { grid-column: span 2; }
@media (max-width: 560px) {
  .ff-chipgrid { grid-template-columns: repeat(2, minmax(0,1fr)); }
  .ff-chipgrid__span2 { grid-column: span 2; }
}

.ff-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 42px;
  padding: 0 12px;
  border-radius: 16px;
  border: 1px solid var(--ff-chip-border);
  background: var(--ff-chip-bg);
  color: var(--ff-text);
  cursor: pointer;
  transition:
    transform var(--ff-fast) var(--ff-ease),
    background var(--ff-fast) var(--ff-ease),
    border-color var(--ff-fast) var(--ff-ease),
    box-shadow var(--ff-fast) var(--ff-ease);
}
.ff-chip:hover { background: var(--ff-chip-bg2); transform: translateY(-1px); }
.ff-chip:active { transform: translateY(0); }

.ff-chip.is-selected,
.ff-chip[aria-pressed="true"] {
  background: rgba(249,115,22,.14);
  border-color: rgba(249,115,22,.40);
  box-shadow: 0 0 0 3px rgba(249,115,22,.14);
}

/* -----------------------------
   7) Topbar + header + nav
   (adds missing structural selectors used in index.html)
----------------------------- */
.ff-chrome { position: sticky; top: 0; z-index: 50; padding-top: var(--ff-safe-top); }

/* Topbar */
.ff-topbar { padding-top: var(--ff-3); padding-bottom: var(--ff-3); }

.ff-topbar__capsule,
.ff-header__capsule { border-radius: 999px; padding: 10px 12px; }

.ff-topbar__row,
.ff-header__row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--ff-4);
}

/* Structural hooks present in HTML */
.ff-topbar__brand { display: flex; align-items: center; }
.ff-topbar__left  { display: flex; align-items: center; min-width: 0; }
.ff-topbar__right { display: flex; align-items: center; justify-content: flex-end; }

.ff-topbar__desktop-only { display: flex; gap: var(--ff-3); align-items: center; }
.ff-topbar__mobile-only { display: none; gap: var(--ff-3); align-items: center; }

.ff-header__desktop-only { display: flex; }
.ff-header__mobile-only { display: none; }

@media (max-width: 860px) {
  .ff-topbar__desktop-only { display: none; }
  .ff-topbar__mobile-only { display: flex; }

  .ff-header__desktop-only { display: none; }
  .ff-header__mobile-only { display: block; }
}

/* “strip” blocks */
.ff-strip {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 8px 10px;
  border-radius: 999px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
}
.sep { opacity: .35; }

/* Platform brand pill */
.ff-topbarBrand {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 8px 10px;
  border-radius: 999px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
}
.ff-topbarBrand__pill {
  padding: 6px 8px;
  font-size: 11px;
  border-radius: 999px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  color: var(--ff-muted);
}
.ff-topbarBrand__text { font-weight: 650; font-size: 13px; }
.ff-topbarBrand__logo { border-radius: 6px; }

/* Header root + actions (missing in original CSS) */
.ff-header { padding-bottom: var(--ff-3); }
.ff-header__actions { display: inline-flex; gap: 10px; flex-wrap: wrap; align-items: center; justify-content: flex-end; }

/* Header brand */
.ff-brand {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  padding: 6px 10px;
  border-radius: 999px;
  transition: background var(--ff-fast) var(--ff-ease), transform var(--ff-fast) var(--ff-ease);
}
.ff-brand:hover { background: rgba(255,255,255,.05); transform: translateY(-1px); }
.ff-brand__mark {
  width: 46px; height: 46px;
  display: grid; place-items: center;
  border-radius: 16px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  overflow: hidden;
}
.ff-logo { object-fit: cover; }

/* index.html uses .ff-brand__meta */
.ff-brand__meta { display: grid; gap: 2px; min-width: 0; }
.ff-brand__title { font-weight: 760; letter-spacing: -.01em; }
.ff-brand__sub { font-size: 13px; color: var(--ff-muted); }

/* Nav links */
.ff-nav { display: inline-flex; gap: 8px; padding: 6px 8px; border-radius: 999px; }
.ff-nav__link {
  padding: 8px 10px;
  border-radius: 999px;
  border: 1px solid transparent;
  color: var(--ff-muted);
  font-size: 13px;
  transition: background var(--ff-fast) var(--ff-ease), color var(--ff-fast) var(--ff-ease), border-color var(--ff-fast) var(--ff-ease);
}
.ff-nav__link:hover {
  background: rgba(255,255,255,.05);
  border-color: var(--ff-border);
  color: var(--ff-text);
}
.ff-nav__link.is-active {
  background: rgba(249,115,22,.12);
  border-color: rgba(249,115,22,.32);
  color: var(--ff-text);
}

/* Scroll progress */
.ff-scroll {
  height: 3px;
  margin-top: 10px;
  background: rgba(255,255,255,.06);
  border-radius: 999px;
  overflow: hidden;
}
.ff-scroll > span {
  display: block;
  height: 100%;
  width: 0%;
  background: linear-gradient(90deg, var(--ff-accent2), var(--ff-accent));
}

/* -----------------------------
   8) Sections + section head
----------------------------- */
.ff-main { padding-top: var(--ff-6); }

.ff-section { padding: var(--ff-9) 0; }
@media (max-width: 640px) { .ff-section { padding: var(--ff-8) 0; } }

.ff-sectionhead {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: var(--ff-6);
}
.ff-sectionhead__text { display: grid; gap: 8px; }
.ff-sectionhead__actions { display: inline-flex; gap: 10px; flex-wrap: wrap; justify-content: flex-end; }

/* -----------------------------
   9) Hero (Graphite Aurora)
   (adds .ff-hero__panel wrapper used in index.html)
----------------------------- */
.ff-hero { position: relative; padding: clamp(18px, 3vw, 28px) 0 var(--ff-9); }
.ff-hero__shell { position: relative; }

.ff-hero__bg {
  position: absolute;
  inset: -30px -20px auto -20px;
  height: 560px;
  pointer-events: none;
  z-index: -1;
  opacity: 1;
}

.ff-hero__orb {
  position: absolute;
  width: 420px; height: 420px;
  border-radius: 999px;
  filter: blur(22px);
  opacity: .72;
  transform: translateZ(0);
}
.ff-hero__orb--a { left: -90px; top: 40px; background: radial-gradient(circle at 30% 30%, rgba(34,211,238,.38), transparent 62%); }
.ff-hero__orb--b { right: -90px; top: 0px; background: radial-gradient(circle at 30% 30%, rgba(249,115,22,.34), transparent 62%); }

.ff-hero__gridlines {
  position: absolute;
  inset: 0;
  background:
    linear-gradient(to right, rgba(255,255,255,.06) 1px, transparent 1px) 0 0/56px 56px,
    linear-gradient(to bottom, rgba(255,255,255,.04) 1px, transparent 1px) 0 0/56px 56px;
  opacity: .10;
  mask-image: radial-gradient(closest-side at 50% 50%, black 40%, transparent 75%);
}

.ff-hero__grid {
  display: grid;
  grid-template-columns: 1.15fr .85fr;
  gap: var(--ff-8);
  align-items: start;
}
@media (max-width: 980px) { .ff-hero__grid { grid-template-columns: 1fr; } }

.ff-hero__copy { display: grid; gap: var(--ff-5); }

.ff-hero__kpis {
  display: grid;
  grid-template-columns: repeat(3, minmax(0,1fr));
  gap: var(--ff-4);
}
@media (max-width: 640px) { .ff-hero__kpis { grid-template-columns: 1fr; } }

.ff-kpiCard {
  border-radius: var(--ff-r-lg);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  padding: var(--ff-5);
  box-shadow: var(--ff-shadow-inset);
}

.ff-hero__cta { display: flex; gap: 12px; flex-wrap: wrap; }

/* index.html uses .ff-hero__panel as the right-rail wrapper */
.ff-hero__panel { min-width: 0; }
@media (min-width: 981px) {
  .ff-hero__panel { position: sticky; top: calc(112px + var(--ff-safe-top)); }
}

.ff-hero__mediaImg {
  width: 100%;
  border-radius: calc(var(--ff-r-xl) - 6px);
  border: 1px solid var(--ff-border);
  display: block;
}

/* -----------------------------
   10) Disclosure / accordion (ff-disc)
----------------------------- */
.ff-disc {
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.03);
  overflow: hidden;
}
.ff-disc--premium { background: rgba(255,255,255,.04); }

.ff-disc__sum {
  list-style: none;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--ff-4);
  padding: var(--ff-5);
  user-select: none;
}
.ff-disc__sum::-webkit-details-marker { display: none; }

.ff-disc__body {
  padding: 0 var(--ff-5) var(--ff-5);
  display: grid;
  gap: var(--ff-3);
}

details.ff-disc[open] {
  background: rgba(255,255,255,.05);
  border-color: var(--ff-border2);
}
details.ff-disc[open] .ff-disc__sum { border-bottom: 1px solid var(--ff-border); }

.ff-bul { margin: 0; padding-left: 18px; }
.ff-bul > li { margin: 8px 0; color: var(--ff-muted); }
.ff-bul > li::marker { color: rgba(249,115,22,.85); }

/* -----------------------------
   11) Meter / progress bar
----------------------------- */
.ff-meter {
  position: relative;
  height: 12px;
  border-radius: 999px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  overflow: hidden;
}
.ff-meter__ticks { position: absolute; inset: 0; pointer-events: none; opacity: .55; }
.ff-meter__tick { position: absolute; top: 0; bottom: 0; width: 1px; background: rgba(255,255,255,.10); }
.ff-meter__tick--25 { left: 25%; }
.ff-meter__tick--50 { left: 50%; }
.ff-meter__tick--75 { left: 75%; }
.ff-meter__tick--100 { left: calc(100% - 1px); }

.ff-meter > span,
#overallBar {
  display: block;
  height: 100%;
  width: 0%;
  border-radius: 999px;
  background: linear-gradient(90deg, rgba(34,211,238,.85), rgba(249,115,22,.92));
  box-shadow: 0 0 0 4px rgba(249,115,22,.08);
  transition: width var(--ff-slow) var(--ff-ease);
}

/* -----------------------------
   12) Inputs + form
----------------------------- */
.ff-form { width: 100%; }

.ff-input {
  width: 100%;
  height: 44px;
  padding: 0 12px;
  border-radius: 16px;
  border: 1px solid var(--ff-input-border);
  background: var(--ff-input-bg);
  color: var(--ff-text);
  outline: none;
  transition: border-color var(--ff-fast) var(--ff-ease),
              box-shadow var(--ff-fast) var(--ff-ease),
              background var(--ff-fast) var(--ff-ease);
}
.ff-input::placeholder { color: rgba(255,255,255,.40); }
html[data-theme="light"] .ff-input::placeholder { color: rgba(13,18,30,.40); }

.ff-input:focus {
  border-color: rgba(249,115,22,.45);
  box-shadow: 0 0 0 4px var(--ff-ring);
}

textarea.ff-input {
  height: 110px;
  padding: 10px 12px;
  resize: vertical;
  line-height: 1.4;
}

.ff-inputrow {
  display: grid;
  grid-template-columns: 44px 1fr;
  border-radius: 16px;
  border: 1px solid var(--ff-input-border);
  background: var(--ff-input-bg);
  overflow: hidden;
}
.ff-inputrow__prefix {
  display: grid;
  place-items: center;
  color: var(--ff-muted);
  border-right: 1px solid var(--ff-border);
}
.ff-inputrow .ff-input {
  border: 0;
  border-radius: 0;
  background: transparent;
  height: 44px;
}
.ff-inputrow:focus-within {
  border-color: rgba(249,115,22,.45);
  box-shadow: 0 0 0 4px var(--ff-ring);
}

/* Checkbox labels */
.ff-check {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  border-radius: 16px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.03);
  color: var(--ff-muted);
  font-size: 13px;
}
.ff-check input { width: 16px; height: 16px; accent-color: var(--ff-accent); }
.ff-check--premium { background: rgba(255,255,255,.04); }

/* QR image used across hero/share */
.ff-qr {
  border-radius: 18px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.03);
  box-shadow: var(--ff-shadow-inset);
}

/* -----------------------------
   13) Checkout grid (Donate section)
----------------------------- */
.ff-checkoutShell { width: 100%; }

.ff-checkoutGrid {
  display: grid;
  grid-template-columns: 1fr 420px;
  gap: var(--ff-6);
  align-items: start;
}
@media (max-width: 980px) { .ff-checkoutGrid { grid-template-columns: 1fr; } }

.ff-checkoutGrid__main,
.ff-checkoutGrid__rail { min-width: 0; }

.ff-railStack { display: grid; gap: var(--ff-4); }
@media (min-width: 981px) {
  .ff-railStack { position: sticky; top: calc(92px + var(--ff-safe-top)); }
}

.ff-railCard { padding: var(--ff-5); }

.ff-slimlist { display: grid; gap: 10px; }
.ff-slimitem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.03);
}

.ff-checkoutbar {
  padding: var(--ff-5);
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
}

/* -----------------------------
   14) Notices + toasts
----------------------------- */
.ff-notice {
  border-radius: var(--ff-r-lg);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  padding: var(--ff-5);
}
.ff-notice--premium { background: rgba(255,255,255,.05); }

.ff-notice--error {
  border-color: rgba(251,113,133,.35);
  background: rgba(251,113,133,.10);
}
.ff-notice--success {
  border-color: rgba(52,211,153,.32);
  background: rgba(52,211,153,.10);
}

.ff-toasts {
  position: fixed;
  top: calc(var(--ff-safe-top) + 14px);
  right: calc(var(--ff-safe-right) + 14px);
  z-index: 999;
  display: grid;
  gap: 10px;
  width: min(360px, calc(100% - 28px));
}

/* -----------------------------
   15) Announcement bar
----------------------------- */
.ff-announce {
  position: sticky;
  top: 0;
  z-index: 80;
  padding-top: var(--ff-safe-top);
  background: rgba(0,0,0,.18);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
}
.ff-announce__row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--ff-4);
  padding: 10px 0;
}
.ff-announce__content { display: flex; align-items: center; gap: 10px; min-width: 0; }
.ff-announce__badge {
  padding: 6px 8px;
  border-radius: 999px;
  border: 1px solid rgba(249,115,22,.35);
  background: rgba(249,115,22,.12);
  color: rgba(255,255,255,.92);
  font-size: 11px;
  letter-spacing: .08em;
  text-transform: uppercase;
}
.ff-announce__text { color: var(--ff-muted); white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }

/* -----------------------------
   16) Boot shimmer + skeletons
----------------------------- */
.ff-boot { padding: var(--ff-6) 0; }
.ff-boot__shimmer {
  height: 56px;
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: linear-gradient(90deg, rgba(255,255,255,.03), rgba(255,255,255,.08), rgba(255,255,255,.03));
  background-size: 240% 100%;
  animation: ff-shimmer 1.25s linear infinite;
}
@keyframes ff-shimmer {
  0% { background-position: 0% 0; }
  100% { background-position: 240% 0; }
}

/* -----------------------------
   17) Teams + cards
----------------------------- */
.ff-teams__grid { gap: var(--ff-4); }

.ff-teamCard {
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  padding: var(--ff-5);
  box-shadow: var(--ff-shadow-inset);
  transition:
    transform var(--ff-fast) var(--ff-ease),
    border-color var(--ff-fast) var(--ff-ease),
    background var(--ff-fast) var(--ff-ease),
    box-shadow var(--ff-fast) var(--ff-ease);
  outline: none;
}
.ff-teamCard:hover { transform: translateY(-2px); background: rgba(255,255,255,.05); border-color: var(--ff-border2); }
.ff-teamCard:focus-visible { box-shadow: 0 0 0 4px var(--ff-ring), var(--ff-shadow-1); }

/* -----------------------------
   18) Sponsors: podium, leaderboard, wall
   (adds __main/__rail wrappers used in index.html)
----------------------------- */
.ff-sponsorsDash {
  display: grid;
  grid-template-columns: 1fr 420px;
  gap: var(--ff-6);
  align-items: start;
}
@media (max-width: 980px) { .ff-sponsorsDash { grid-template-columns: 1fr; } }

.ff-sponsorsDash__main,
.ff-sponsorsDash__rail { min-width: 0; }

@media (min-width: 981px) {
  .ff-sponsorsDash__rail { position: sticky; top: calc(92px + var(--ff-safe-top)); }
}

.ff-podium { display: grid; gap: 10px; padding: 0; }
.ff-podium > li {
  border-radius: var(--ff-r-lg);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  padding: 12px 12px;
}

.ff-sponsorRow {
  border-radius: var(--ff-r-lg);
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  padding: 12px 12px;
}

.ff-sponsors__wallwrap { position: relative; }
.ff-sponsors__wall {
  display: grid;
  grid-template-columns: repeat(3, minmax(0,1fr));
  gap: 10px;
}
@media (max-width: 980px) { .ff-sponsors__wall { grid-template-columns: repeat(2, minmax(0,1fr)); } }

.ff-sponsorLogo {
  display: grid;
  place-items: center;
  border-radius: 18px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  padding: 14px;
  min-height: 86px;
  transition: transform var(--ff-fast) var(--ff-ease), background var(--ff-fast) var(--ff-ease), border-color var(--ff-fast) var(--ff-ease);
}
.ff-sponsorLogo:hover { transform: translateY(-2px); background: rgba(255,255,255,.06); border-color: var(--ff-border2); }
.ff-sponsorLogo img { max-height: 40px; object-fit: contain; filter: saturate(1.05) contrast(1.05); }

/* -----------------------------
   19) FAQ dashboard
   (adds __main/__rail wrappers used in index.html)
----------------------------- */
.ff-faqDash {
  display: grid;
  grid-template-columns: 1fr 420px;
  gap: var(--ff-6);
  align-items: start;
}
@media (max-width: 980px) { .ff-faqDash { grid-template-columns: 1fr; } }

.ff-faqDash__main,
.ff-faqDash__rail { min-width: 0; }

@media (min-width: 981px) {
  .ff-faqDash__rail { position: sticky; top: calc(92px + var(--ff-safe-top)); }
}

.ff-faq__item .ff-disc__sum { padding: 14px 14px; }
.ff-faq__item .ff-disc__body { padding: 0 14px 14px; }

/* -----------------------------
   20) Footer
----------------------------- */
.ff-footer { padding: var(--ff-9) 0 calc(120px + var(--ff-safe-bottom)); }

.ff-footerCta__inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--ff-6);
}
@media (max-width: 860px) {
  .ff-footerCta__inner { flex-direction: column; align-items: flex-start; }
}
.ff-footerCta__title {
  font-size: 22px;
  font-weight: 780;
  letter-spacing: -.01em;
  margin-top: 6px;
}

.ff-footer__grid {
  margin-top: var(--ff-8);
  display: grid;
  grid-template-columns: 1.2fr .8fr 1fr;
  gap: var(--ff-6);
}
@media (max-width: 980px) { .ff-footer__grid { grid-template-columns: 1fr; } }

.ff-footer__panel { display: grid; gap: var(--ff-4); }
.ff-footer__linkgrid { display: grid; gap: 10px; }
.ff-footer__linkgrid a {
  color: var(--ff-muted);
  padding: 8px 10px;
  border-radius: 14px;
  border: 1px solid transparent;
  transition: background var(--ff-fast) var(--ff-ease), border-color var(--ff-fast) var(--ff-ease), color var(--ff-fast) var(--ff-ease);
}
.ff-footer__linkgrid a:hover {
  background: rgba(255,255,255,.05);
  border-color: var(--ff-border);
  color: var(--ff-text);
}

/* KPI mini table */
.ff-kpi { display: grid; gap: 10px; }
.ff-kpi__row {
  display: grid;
  grid-template-columns: 90px 1fr;
  gap: 12px;
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.03);
}
.ff-kpi__name { color: var(--ff-muted); font-size: 12px; letter-spacing: .06em; text-transform: uppercase; }
.ff-kpi__val { color: var(--ff-text); }

/* -----------------------------
   22) Tabs (mobile dock)
----------------------------- */
.ff-tabs {
  position: fixed;
  left: 0; right: 0;
  bottom: 0;
  z-index: 95;
  padding-bottom: var(--ff-safe-bottom);
  background: rgba(0,0,0,.28);
  -webkit-backdrop-filter: blur(14px);
  backdrop-filter: blur(14px);
  border-top: 1px solid rgba(255,255,255,.10);
}

.ff-tabs__shell {
  width: min(var(--ff-container), 100%);
  margin: 0 auto;
  padding: 10px calc(var(--ff-gutter) + var(--ff-safe-left)) 12px calc(var(--ff-gutter) + var(--ff-safe-right));
}

.ff-tabs__scroller {
  display: flex;
  gap: 10px;
  overflow: auto hidden;
  scroll-snap-type: x mandatory;
  padding-bottom: 6px;
}
.ff-tabs__scroller::-webkit-scrollbar { height: 6px; }
.ff-tabs__scroller::-webkit-scrollbar-thumb { background: rgba(255,255,255,.16); border-radius: 999px; }

.ff-tab {
  flex: 0 0 auto;
  scroll-snap-align: start;
  padding: 10px 12px;
  border-radius: 999px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  color: var(--ff-muted);
  font-size: 13px;
  transition: background var(--ff-fast) var(--ff-ease), border-color var(--ff-fast) var(--ff-ease), color var(--ff-fast) var(--ff-ease), transform var(--ff-fast) var(--ff-ease);
}
.ff-tab:hover { background: rgba(255,255,255,.06); transform: translateY(-1px); color: var(--ff-text); }
.ff-tab.is-active { border-color: rgba(249,115,22,.36); background: rgba(249,115,22,.10); color: var(--ff-text); }

.ff-tab--cta {
  background: rgba(249,115,22,.14);
  border-color: rgba(249,115,22,.36);
  color: rgba(255,255,255,.92);
}

/* index.html includes .ff-tabs__hint */
.ff-tabs__hint { opacity: .75; }

/* -----------------------------
   23) Back to top
----------------------------- */
.ff-backtotop {
  position: fixed;
  right: calc(var(--ff-safe-right) + 14px);
  bottom: calc(78px + var(--ff-safe-bottom));
  z-index: 94;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 12px;
  border-radius: 999px;
  border: 1px solid var(--ff-border);
  background: rgba(0,0,0,.28);
  color: var(--ff-text);
  -webkit-backdrop-filter: blur(12px);
  backdrop-filter: blur(12px);
  box-shadow: var(--ff-shadow-2);
}
.ff-backtotop__icon {
  width: 24px; height: 24px;
  display: grid; place-items: center;
  border-radius: 999px;
  background: rgba(255,255,255,.06);
  border: 1px solid var(--ff-border);
}

/* -----------------------------
   24) Drawer (mobile menu)
----------------------------- */
#mobileDrawer.ff-drawer {
  position: fixed;
  inset: 0;
  z-index: 200;
  display: grid;
  grid-template-columns: 1fr;
}

.ff-drawer__backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.55);
  border: 0;
}

.ff-drawer__panel {
  position: relative;
  width: min(520px, calc(100% - 24px));
  margin: calc(var(--ff-safe-top) + 14px) auto;
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: rgba(0,0,0,.26);
  -webkit-backdrop-filter: blur(16px);
  backdrop-filter: blur(16px);
  box-shadow: var(--ff-shadow-2);
  padding: var(--ff-6);
  outline: none;
}

.ff-drawer__head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--ff-4);
  margin-bottom: var(--ff-4);
}

.ff-drawer__list { display: grid; gap: 10px; }
.ff-drawer__link {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 12px;
  border-radius: 16px;
  border: 1px solid var(--ff-border);
  background: rgba(255,255,255,.04);
  color: var(--ff-text);
}
.ff-drawer__link:hover { background: rgba(255,255,255,.06); border-color: var(--ff-border2); }

/* -----------------------------
   25) Modal (Share, Policy, Proof, etc.)
----------------------------- */
.ff-modal {
  position: fixed;
  inset: 0;
  z-index: 300;
  display: grid;
  place-items: center;
  padding: calc(var(--ff-safe-top) + 18px) 14px calc(var(--ff-safe-bottom) + 18px);
}

.ff-modal__backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,.62);
  border: 0;
}

.ff-modal__panel {
  position: relative;
  width: min(720px, 100%);
  border-radius: var(--ff-r-xl);
  border: 1px solid var(--ff-border);
  background: rgba(0,0,0,.26);
  -webkit-backdrop-filter: blur(16px);
  backdrop-filter: blur(16px);
  box-shadow: var(--ff-shadow-2);
  padding: var(--ff-6);
  outline: none;
}
.ff-modal__panel:focus-visible { box-shadow: 0 0 0 4px var(--ff-ring), var(--ff-shadow-2); }

.ff-modal--compact .ff-modal__panel { width: min(560px, 100%); }

.ff-modal__head {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: var(--ff-4);
  margin-bottom: var(--ff-4);
}

.ff-modal__title {
  font-size: 18px;
  font-weight: 760;
  letter-spacing: -.01em;
}

/* -----------------------------
   26) Links + focus polish
----------------------------- */
a:hover { color: var(--ff-link-hover); }
a:focus-visible {
  outline: none;
  box-shadow: 0 0 0 4px var(--ff-ring);
  border-radius: 10px;
}

/* -----------------------------
   27) Section IDs (anchors) – nicer scroll offset
----------------------------- */
:where(#progress, #impact, #sponsors, #teams, #donate, #faq, #hero) { scroll-margin-top: 110px; }
#content { outline: none; }

/* -----------------------------
   28) Reduced motion
----------------------------- */
@media (prefers-reduced-motion: reduce) {
  * { animation: none !important; transition: none !important; scroll-behavior: auto !important; }
}

/* -----------------------------
   29) Print (basic safety)
----------------------------- */
@media print {
  .ff-tabs, .ff-toasts, .ff-shellBg, .ff-backtotop, .ff-announce { display: none !important; }
  .ff-body { background: #fff; color: #111; }
  .ff-card, .ff-mini, .ff-panel { box-shadow: none !important; background: #fff !important; }
}
