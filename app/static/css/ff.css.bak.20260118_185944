@layer ff_util {
  /* Make native details feel snappy */
  details.ff-disc > summary.ff-disc__sum{
    -webkit-tap-highlight-color: transparent;
    user-select: none;
  }
  details.ff-disc[open] > summary .ff-pill{ opacity: .95; }

  /* Better tap targets */
  @media (pointer: coarse){
    .ff-btn, .ff-chip{ min-height: 42px; }
    .ff-icon{ width: 42px; height: 42px; }
  }

  /* Narrow screens: keep things compact but readable */
  @media (max-width: 420px){
    .ff-btn{ padding: 10px 12px; }
    .ff-btn--sm{ padding: 8px 10px; }
    .ff-pill{ font-size: 12px; }
    .ff-help{ font-size: 12.5px; }
  }

  /* Print hygiene (QR/flyer) */
  @media print{
    .ff-tabs, .ff-sticky, .ff-backtotop, .ff-modal, .ff-drawer, .ff-toasts{ display: none !important; }
    .ff-chrome{ position: static; backdrop-filter: none; }
    .ff-card, .ff-mini, .ff-disc{ box-shadow: none !important; }
    a{ text-decoration: underline; }
  }
}


/* === A11Y Focus: keep keyboard focus visible (no outline:none) === */
:where(a, button, [role="button"], input, select, textarea, summary, [tabindex]:not([tabindex="-1"])):focus {
  outline: 2px solid transparent;
  outline-offset: 3px;
}

:where(a, button, [role="button"], input, select, textarea, summary, [tabindex]:not([tabindex="-1"])):focus-visible {
