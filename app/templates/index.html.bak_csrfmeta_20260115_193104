  <!-- Theme boot (MUST run before CSS paints) -->
  <script>
    (function () {
      try {
        var k = "ff_theme_v12";
        var t = localStorage.getItem(k);

        if (t !== "dark" && t !== "light") {
          var legacy =
            localStorage.getItem("ff_theme_v11") ||
            localStorage.getItem("ff_theme_v10") ||
            localStorage.getItem("ff_theme_v9") ||
            localStorage.getItem("ff_theme");
          if (legacy === "dark" || legacy === "light") t = legacy;
        }

        if (t !== "dark" && t !== "light") {
          var prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
          t = prefersDark ? "dark" : "light";
        }

        document.documentElement.setAttribute("data-theme", t);
      } catch (e) {}
    })();
  </script>

  <!-- Optional: capture mode via ?capture=1 -->
  <script>
    (function () {
      try {
        var qs = new URLSearchParams(location.search);
        if (qs.has("capture")) document.documentElement.setAttribute("data-ff-capture", "true");
      } catch (e) {}
    })();
  </script>

