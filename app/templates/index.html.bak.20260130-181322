<script>
/**
 * call setBrand({ brand:'#...', hi:'#...', accent:'#...', glowA:'...' }) after page loads.
 * Writes CSS custom props on document.documentElement so tokens update instantly.
 */
function setBrand(vars = {}) {
  const root = document.documentElement;

  // Legacy FF vars (keep for backward compatibility)
  if (vars.brand)  root.style.setProperty('--ff-brand', vars.brand);
  if (vars.hi)     root.style.setProperty('--ff-hi', vars.hi);
  if (vars.accent) root.style.setProperty('--ff-accent', vars.accent);
  if (vars.glowA)  root.style.setProperty('--ff-glow-a', vars.glowA);

  // Modern token bridge (use if your CSS is token-based)
  // NOTE: these expect raw HSL channels in many systems; if yours uses hex, keep them as hex.
  // If your CSS is like: hsla(var(--primary)/.85) then --primary should be "220 90% 56%" not "#..."
  // If your CSS is like: var(--primary) directly, hex is fine.
  if (vars.brand)  root.style.setProperty('--primary', vars.brand);
  if (vars.hi)     root.style.setProperty('--secondary', vars.hi);
  if (vars.accent) root.style.setProperty('--ring', vars.accent);
}
window.setBrand = setBrand;
</script>
</body>
</html>


